@using VIATECH.Service
<div id="footer-wrapper">
	<div id="footer" class="container">
		<header class="major">
			<h2>Links</h2>
		</header>
		<div class="row">
			<section class="col-6 col-12-narrower">
				<form method="post" action="#">
					<div class="row gtr-50">
						<div class="col-6 col-12-mobile">
							<input name="name" placeholder="Name" type="text" />
						</div>
						<div class="col-6 col-12-mobile">
							<input name="email" placeholder="Email" type="text" />
						</div>
						<div class="col-12">
							<textarea name="message" placeholder="Message"></textarea>
						</div>
						<div class="col-12">
							<ul class="actions">
								<li><input type="submit" value="Send Message" /></li>
								<li><input type="reset" value="Clear form" /></li>
							</ul>
						</div>
					</div>
				</form>
			</section>
			<section class="col-6 col-12-narrower">
				<div class="row gtr-0">
					<ul class="divided icons col-6 col-12-mobile">
						<li><a href="https://github.com/viaside"><span class="extra">github.com/viaside</a></li>
						<li><a>@Config.CompanyEmail</a></li>
					</ul>
					<ul class="divided icons col-6 col-12-mobile">
						<li><a href="https://t.me/viaside"><span class="extra">t.me/viaside</a></li>
						<li><a>@Config.CompanyPhone</a></li>
					</ul>
				</div>
			</section>
		</div>
	</div>
	<div id="copyright" class="container">
		<ul class="menu">
			<li>&copy; @Config.CompanyName. All rights reserved.</li><li>Design: <a href="">NotB0</a></li>
		</ul>
	</div>
</div>